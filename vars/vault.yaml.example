# Ansible Vault file for sensitive credentials
# Remember to encrypt with: ansible-vault encrypt vault.yaml

# --- CLOUDFLARE ---
# Cloudflare API token for DNS-01 challenge
letsencrypt_cloudflare_api_token: "your-cloudflare-api-token-here"

# Cloudflare zone/domain that manages DNS for the certificate domains
cloudflare_zone: "example.com"


# --- LET'S ENCRYPT ---
# Account email for Let's Encrypt notifications (renewals, expirations)
acme_account_email: "admin@example.com"